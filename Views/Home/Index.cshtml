@{
    ViewData["Title"] = "PDF to Word Converter";
}

<div class="container mt-5">
    <h2 class="mb-4">Upload PDF to Convert to Word</h2>
    <form id="uploadForm" enctype="multipart/form-data" method="post" asp-controller="Home" asp-action="ConvertPdfToWord">
        <div class="mb-3">
            <input type="file" name="pdfFile" accept=".pdf" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Convert and Download</button>
    </form>
</div>