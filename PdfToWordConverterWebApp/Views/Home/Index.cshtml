
@{
    ViewData["Title"] = "PDF to Word Converter";
}

<h2>Upload a PDF to convert</h2>

<form method="post" enctype="multipart/form-data" asp-action="ConvertPdfToWord">
    <div class="form-group">
        <input type="file" name="pdfFile" accept=".pdf" class="form-control" required />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Convert to Word</button>
</form>
